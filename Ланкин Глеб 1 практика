#include <stdio.h>
int capital = 1110;
int food = 3000;

void food_cost(const int month) {
	if (month == 12) {
		capital -= 2000;
	}
	capital -= food;
}
int main()
{
	int year = 2026;
	int month = 2;
//	int capital = 0;
	int salary = 10001;
	int premia = 5000;


	while(!(year == 2027 && month == 2)) {
		if (month == 3) {
			salary *= 1.5;
		}
		capital += salary;

		if (month == 2 && year == 2026) {
			capital += premia;
		}
		food_cost(month);

		++month;
		if (month == 13) {
			++year;
			month = 1;
		}
	}
	printf("salary = %d\n", salary);
	printf("capital = %d", capital);
}
